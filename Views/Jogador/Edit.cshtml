@model Jogador

@{
    ViewData["Title"] = "Edit";
}

<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Equipes</title>
    <link rel="stylesheet" href="~/css/equipes.css">
</head>


<main>
    <section class="container-grid cadastro-equipes">

@if (ViewBag.UserName == null)
    {
        <h2>Voce nao tem acesso a pagina enquanto nao logar, clique abaixo:</h2>
        <a asp-area="" asp-controller="Login" asp-action="Index">Login</a>
    }
    else
    {      
        <form class="frm-cad-equipe" method="post" action="@Url.Action("Atualizar")">

            <div class="cadequipe-titulo">
                    <h1>Atualizar Jogadores</h1>
                    <hr>
            </div>

            <input type="hidden" name="IdJogador" value="@ViewBag.Jogador.IdJogador">

            <input class="campo-entrada" type="text" id="nome-jogador" name="Name" placeholder="Digite o nome do Jogador:" value="@ViewBag.Jogador.Name" required>

            <input class="campo-entrada" type="email" id="email-jogador" name="Email" placeholder="Digite o Email do Jogador:" value="@ViewBag.Jogador.Email" required>

            <input class="campo-entrada" type="password" id="senha" name="Senha" placeholder="Digite a Senha:" value="@ViewBag.Jogador.Senha" required>

            <select class="campo-entrada" name="IdEquipe" id="IdEquipe">
                <option value="0">Equipes</option>

                @foreach (Equipe equipe in ViewBag.Equipe)
                {
                    @if (equipe.IdEquipe == @ViewBag.Jogador.IdEquipe)
                    {
                        <option value="@equipe.IdEquipe" selected>@equipe.Name</option>
                    }
                    else
                    {
                        <option value="@equipe.IdEquipe">@equipe.Name</option>
                    }
                }
            </select>

            <button type="submit">Atualizar</button>
        </form>
    }
    </section>
</main>
